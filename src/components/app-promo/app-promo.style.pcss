.app-promo {
  padding: 107px 40px 40px;
  background-color: var(--gray--900);
  color: var(--white);
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;

  & h1 {
    letter-spacing: 4px;
    font-size: 42px;
  }
  & p {
    font-size: 24px;
    color: var(--amber);
  }
}
